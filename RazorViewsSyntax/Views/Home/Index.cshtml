@{
    int sumofeven = 0;
    int sumofodd = 0;
    for (int i = 1; i <= 10; i++)
    {
        if (i % 2 == 0)
        {
            sumofeven = sumofeven + i;
        }
        else
        {
            sumofodd = sumofodd + i;
        }
    }
}
